datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model ExchangeOffice {
  address     String
  createdAt   DateTime   @default(now())
  currencies  Currency[]
  id          String     @id @default(cuid())
  managerName String?
  name        String
  phoneNumber String?
  updatedAt   DateTime   @updatedAt
}

model Currency {
  buyCurrency        Boolean
  buyingRate         Float?
  createdAt          DateTime           @default(now())
  currencyExchanges  CurrencyExchange[]
  exchangeOffice     ExchangeOffice?    @relation(fields: [exchangeOfficeId], references: [id])
  exchangeOfficeId   String?
  highestBuyingRate  String?
  highestSellingRate Float?
  id                 String             @id @default(cuid())
  iso                String             @unique
  lowestBuyingRate   Float?
  lowestSellingRate  Float?
  Name               String
  sellCurrency       Boolean
  sellingRate        Float?
  updatedAt          DateTime           @updatedAt
}

model CurrencyExchange {
  createdAt DateTime   @default(now())
  currency  Currency[]
  id        String     @id @default(cuid())
  updatedAt DateTime   @updatedAt
}